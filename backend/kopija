<script>
// ===== SECURITY =====
function escapeHTML(str) {
  return str
    .replaceAll("&", "&amp;")
    .replaceAll("<", "&lt;")
    .replaceAll(">", "&gt;");
}

// ===== MAIN SEND =====
async function pSend(){
  const input = document.getElementById("pInput");
  const text = input.value.trim();
  if(!text) return;

  const chat = document.getElementById("pChat");

  // Disable input (premium UX)
  input.disabled = true;

  // USER MESSAGE
  chat.innerHTML += `
    <div style="display:flex;justify-content:flex-end;">
      <div style="
        background:linear-gradient(135deg,#8b5cf6,#6d28d9);
        padding:10px 14px;
        border-radius:16px;
        font-size:13px;
        max-width:75%;
        box-shadow:0 10px 26px rgba(139,92,246,.8);
      ">${escapeHTML(text)}</div>
    </div>
  `;
  input.value = "";
  chat.scrollTop = chat.scrollHeight;

  // TYPING INDICATOR
  chat.innerHTML += `
    <div id="typing" style="display:flex;gap:8px;">
      <div style="font-size:18px;">ðŸ¤–</div>
      <div style="
        background:rgba(0,0,0,.6);
        border:1px solid rgba(168,85,247,.45);
        padding:10px 14px;
        border-radius:16px;
        font-size:13px;
      ">RaÅ¡o...</div>
    </div>
  `;
  chat.scrollTop = chat.scrollHeight;

  try {
    // Timeout protection
    const controller = new AbortController();
    const timeout = setTimeout(() => controller.abort(), 15000);

    const res = await fetch("https://aidra-ai.onrender.com/api/chat", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
      message: text,
    clientId: window.AIDRA_CLIENT_ID || "demo"
    })
,
      signal: controller.signal
    });

    clearTimeout(timeout);

    if(!res.ok) throw new Error("API error");

    const data = await res.json();
    document.getElementById("typing")?.remove();

    chat.innerHTML += `
      <div style="display:flex;gap:8px;">
        <div style="font-size:18px;">ðŸ¤–</div>
        <div style="
          background:rgba(0,0,0,.6);
          border:1px solid rgba(168,85,247,.45);
          padding:12px 14px;
          border-radius:16px;
          font-size:13px;
          max-width:80%;
        ">${escapeHTML(data.reply)}</div>
      </div>
    `;
    chat.scrollTop = chat.scrollHeight;

  } catch (err) {
    console.error(err);
    document.getElementById("typing")?.remove();

    chat.innerHTML += `
      <div style="display:flex;gap:8px;">
        <div style="font-size:18px;">ðŸ¤–</div>
        <div style="
          background:#3b0d1d;
          border:1px solid #ef4444;
          padding:10px 14px;
          border-radius:16px;
          font-size:13px;
        ">
          Ä®vyko klaida. Bandykite dar kartÄ….
        </div>
      </div>
    `;
  } finally {
    input.disabled = false;
    input.focus();
  }
}

// ===== SUGGESTION CLICK =====
function pUse(text){
  document.getElementById("pInput").value = text;
  pSend();
}
</script>
